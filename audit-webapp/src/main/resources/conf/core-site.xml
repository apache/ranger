<configuration>
    <!--
        Hadoop security settings for Ranger Audit WebApp
        Note: The audit-webapp authenticates directly as the rangeradmin principal
        and writes all audits to HDFS as that user.
        written to HDFS as rangeradmin in service-specific directories:
        /ranger/audit/<serviceType>/<appId>/
    -->
    <property>
        <name>hadoop.security.authentication</name>
            <value>kerberos</value>
        <description>Authentication method for Hadoop services:- simple or kerberos </description>
    </property>

    <property>
        <name>hadoop.security.auth_to_local</name>
        <value>
            RULE:[1:$1@$0](rangerauditserver@EXAMPLE\.COM)s/.*/rangerauditserver/
            RULE:[1:$1/$2@$0](rangerauditserver/ranger-audit.rangernw@EXAMPLE\.COM)s/.*/rangerauditserver/
            DEFAULT
        </value>
        <description>
            Kerberos principal to local user name mapping rules for Ranger Audit Server.
            Note: rangerauditserver/hostname@REALM and rangerauditserver@REALM both map to 'ranger' OS user
        </description>
    </property>
</configuration>
